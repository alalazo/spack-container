{
  "singularity": {
    "ubuntu": {
      "update": "apt-get -yqq update && apt-get -yqq upgrade",
      "install": "apt-get -yqq install",
      "clean": "rm -rf /var/lib/apt/lists/*",
      "environment": [
        {
          "action": "set",
          "variable": "FORCE_UNSAFE_CONFIGURE",
          "value": "1"
        },
        {
          "action": "set",
          "variable": "DEBIAN_FRONTEND",
          "value": "noninteractive"
        }
      ],
      "versions": {
        "18.04": {
          "packages": [
            "build-essential",
            "ca-certificates",
            "curl",
            "g++",
            "gcc",
            "gfortran",
            "git",
            "make",
            "python3"
          ]
        }
      }
    }
  }
}